<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jyoti.myproject.MenuActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pbg8"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/tvrem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="86dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="105dp"
        android:text="Reminder"
        android:textSize="25dp"
        android:textColor="#1eac40"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#bd6732"

        android:layout_marginTop="43dp"
        android:text="To do List"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_below="@+id/tvrem"
        android:layout_alignLeft="@+id/tvrem"
        android:layout_alignStart="@+id/tvrem" />

    <TextView
        android:id="@+id/tvmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvrem"
        android:layout_alignStart="@+id/tvrem"
        android:layout_below="@+id/tvlist"

        android:textSize="25dp"
        android:textColor="#1e89bb"
        android:layout_marginTop="43dp"
        android:text="Message" />

    <TextView
        android:id="@+id/tvmail"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:textColor="#b01d9a"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmes"
        android:layout_marginTop="61dp"
        android:layout_toEndOf="@+id/tvmes"
        android:layout_toRightOf="@+id/tvmes"
        android:text="Email" />


</RelativeLayout>
